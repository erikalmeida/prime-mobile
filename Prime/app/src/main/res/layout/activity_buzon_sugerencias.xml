<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardView">

                <TextView
                    android:text="Por favor danos tu opinion y sugerencias, estas seran bien recibidas."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewBuzon"
                    android:layout_weight="1"
                    android:layout_margin="18dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/servialdanalogo256"
                    android:id="@+id/imageView"
                    android:layout_weight="0.8"
                    android:maxWidth="10dp"
                    android:minHeight="73dp"
                    android:maxHeight="10dp"
                    android:layout_margin="20dp" />

            </LinearLayout>

            <TextView
                android:text="Nombre:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewNombre"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextNombre"
                android:layout_marginLeft="10dp" />

            <TextView
                android:text="Apellido:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewApellido"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextApellido"
                android:layout_marginLeft="10dp" />

            <TextView
                android:text="Email:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewEmail"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextEmail"
                android:layout_marginLeft="10dp" />

            <TextView
                android:text="Sugerencia:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewSugerencia"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextSugerencia"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="Enviar"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonEnviarSugerencia"
                    android:background="@drawable/boton_tipo_uno"
                    android:layout_gravity="center"
                    android:textColor="@android:color/background_light" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

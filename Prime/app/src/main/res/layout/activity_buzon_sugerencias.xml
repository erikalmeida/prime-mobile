<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardView"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:text="Por favor danos tu opinion y sugerencias, estas seran bien recibidas."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewBuzon"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/mailbox1"
                    android:id="@+id/imageView"
                    android:layout_weight="0.8"
                    android:maxWidth="10dp"
                    android:minHeight="73dp"
                    android:maxHeight="10dp" />

            </LinearLayout>

            <TextView
                android:text="¿Que deseas enviar?:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTipo"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/spinnerTipo"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="¿Sobre que es tu comentario?:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMotivo"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/spinnerMotivo"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:text="Comentario:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewComentario"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextComentario"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="14sp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="Enviar"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnEnviarSugerencia"
                    android:background="@drawable/boton_tipo_uno"
                    android:layout_gravity="center"
                    android:textColor="@android:color/background_light"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

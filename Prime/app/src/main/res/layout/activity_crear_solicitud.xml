<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="Datos de la solicitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDatosSolicitud"
                android:gravity="center"
                android:layout_margin="30dp"
                android:textSize="18sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextAsunto"
                android:layout_marginBottom="30dp"
                android:hint="Asunto"
                android:layout_margin="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextDescripcion"
                android:layout_marginBottom="20dp"
                android:hint="Descripcion"
                android:layout_margin="15dp" />

            <TextView
                android:text="Datos del servicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDatosServicios"
                android:gravity="center"
                android:layout_margin="20dp"
                android:textSize="18sp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp">

                    <TextView
                        android:text="Servicio:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewServicio"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_action_buscar"
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:clickable="true" />
                </LinearLayout>

                <TextView
                    android:text="Reparacion de motor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewServicioTexto"
                    android:textSize="16sp"
                    android:layout_marginBottom="25dp"
                    android:layout_margin="5dp" />

            </LinearLayout>

            <Button
                android:text="Enviar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonEnviarSolicitud"
                android:background="@drawable/boton_tipo_uno"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

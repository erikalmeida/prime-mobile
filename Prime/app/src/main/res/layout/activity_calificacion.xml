<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_calificacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.si.servialdana.prime.CalificacionServicio">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardView">

                <TextView
                    android:text="Tu opinion es importante para nosotros, cuando nos calificas, contribuyes con que mejoremos continuamente"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewBuzon"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/review1"
                    android:id="@+id/imageView"
                    android:layout_weight="0.8"
                    android:maxWidth="10dp"
                    android:minHeight="73dp"
                    android:maxHeight="10dp" />

            </LinearLayout>
<ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <TextView
                    android:text="@string/section_question_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewServicio"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <RatingBar
                    android:id="@+id/ratingBarServicio"
                    android:layout_width="244dp"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="3.0"
                    android:layout_marginTop="10dp"
                    style="@style/Widget.AppCompat.RatingBar"
                    android:isIndicator="false"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="10dp" />


                    <TextView
                        android:text="@string/section_question_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewInstalacion"
                        android:textSize="18sp"
                        android:textStyle="normal|bold"
                        android:textColor="@color/secondary_text"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" />

                <RatingBar
                    android:id="@+id/ratingBarInstalaciones"
                    android:layout_width="244dp"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="3.0"
                    android:layout_marginTop="10dp"
                    style="@style/Widget.AppCompat.RatingBar"
                    android:isIndicator="false"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:text="@string/section_question_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewAtencion"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <RatingBar
                    android:id="@+id/ratingBarAtencion"
                    android:layout_width="244dp"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="3.0"
                    android:layout_marginTop="10dp"
                    style="@style/Widget.AppCompat.RatingBar"
                    android:isIndicator="false"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="10dp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/editTextComentarioCalificacion"
                    android:hint="Comentario"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <Button
                    android:text="Enviar CalificaciÃ³n"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnEnviarCalificacion"
                    android:background="@drawable/boton_tipo_uno"
                    android:layout_gravity="center"
                    android:textColor="@android:color/background_light"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="30dp" />


            </LinearLayout>
            </ScrollView>
        </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalle_presupuesto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.si.servialdana.prime.DetallePresupuesto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:layout_height="50dp"
                app:srcCompat="@drawable/promocion1"
                android:id="@+id/imageView13"
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_margin="6dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="250dp"
                android:layout_height="70dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView26"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:textAlignment="center"
                    android:text="TU PRESUPUESTO HA SIDO GENERADO"
                    android:layout_margin="3dp" />

                <TextView
                    android:text="25/02/17"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView28"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="Hemos procesado el presupuesto para tu vehiculo:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView27"
            android:layout_marginTop="20dp" />

        <TextView
            android:text="Servicios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView29"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="92dp"
            android:layout_width="330dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="165dp"
                android:layout_height="match_parent">

                <TextView
                    android:text="Cambio de Aceite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20"
                    android:layout_margin="5dp" />

                <TextView
                    android:text="Reparacion de Inyector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19"
                    android:layout_margin="5dp" />

                <TextView
                    android:text="Alineacion y Balanceo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:layout_margin="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="165dp">

                <TextView
                    android:text="Bsf 20000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView23"
                    android:textAlignment="textEnd"
                    android:layout_margin="5dp" />

                <TextView
                    android:text="Bsf 55000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    android:textAlignment="textEnd"
                    android:layout_margin="5dp" />

                <TextView
                    android:text="Bsf 62500"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21"
                    android:textAlignment="textEnd"
                    android:layout_margin="5dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:text="Repuestos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView30"
            android:textAlignment="center"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="330dp"
            android:layout_height="66dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="165dp"
                android:layout_height="match_parent">

                <TextView
                    android:text="Bujias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView32"
                    android:layout_margin="5dp" />

                <TextView
                    android:text="Inyector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView31"
                    android:layout_margin="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="165dp"
                android:layout_height="match_parent">

                <TextView
                    android:text="Bsf 9500"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView34"
                    android:textAlignment="textEnd"
                    android:layout_margin="5dp" />

                <TextView
                    android:text="Bsf 15000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView33"
                    android:textAlignment="textEnd"
                    android:layout_margin="5dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:text="Total: Bsf 162500"
            android:layout_width="match_parent"
            android:id="@+id/textView24"
            android:textAlignment="center"
            android:layout_height="25dp"
            android:textStyle="normal|bold"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="Esta de acuerdo con el presupuesto para su vehiculo?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView25"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textSize="14sp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_weight="0.24"
            android:layout_marginTop="10dp">

            <Button
                android:text="Aceptar"
                android:layout_height="50dp"
                android:id="@+id/btnAceptar"
                android:background="@drawable/boton_tipo_uno"
                android:layout_weight="1"
                android:layout_width="75dp"
                android:layout_margin="10dp"
                android:textStyle="normal|bold"
                android:textColor="@color/cardview_light_background" />

            <Button
                android:text="Rechazar"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:id="@+id/btnRechazar"
                android:layout_weight="1"
                android:background="@drawable/boton_tipo_tres"
                android:layout_margin="10dp"
                android:textStyle="normal|bold"
                android:textColor="@color/cardview_light_background" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
